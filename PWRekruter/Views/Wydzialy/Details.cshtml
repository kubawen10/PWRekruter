@model PWRekruter.Models.Wydzial

@{
    ViewData["Title"] = "Details";
    ViewData["Sciezka"] = "Panel rekrutera / Wydziały / " + Model.Symbol;
}

<div>
    <h4>Wydział @Model.Symbol</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
    </dl>
</div>
<div>
    <div class="d-flex flex-row justify-content-between">
        <span>Kierunki: @Model.Kierunki.Count</span>
        <a class="btn btn-outline-secondary" asp-action="IndexAdm" asp-route-symbol="@Model.Symbol" asp-controller="Kierunki">Przejdź <i class="bi bi-arrow-right"></i></a>
    </div>
    
    
    <hr style="margin-top: 0.3rem;margin-bottom: 0.3rem;border: 0;border-top: 4px solid rgba(0, 0, 0, 0.1);" />
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
